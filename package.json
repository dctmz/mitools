{
  "name": "mitools",
  "version": "0.0.17",
  "description": "一些常用的工具类",
  "homepage": "https://github.com/dctmz/mitools",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git@github.com:dctmz/mitools.git"
  },
  "files": [
    "lib/*"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix && npm run lint:prettier",
    "lint:prettier": "prettier -c --write \"src/**/*\" --end-of-line auto",
    "lint-staged:js": "eslint --cache --ext .js,.jsx,.ts,.tsx ./src",
    "lint-staged": "lint-staged",
    "showConfig": "tsc --showConfig",
    "pub": "npm build && npm publish"
  },
  "keywords": [],
  "author": "dctmz",
  "license": "MIT",
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "npm run lint-staged:js",
    "**/*.{js,jsx,tsx,ts,less,md,json}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@vitest/browser": "^0.31.0",
    "@vitest/coverage-c8": "^0.31.0",
    "eslint": "^8.40.0",
    "happy-dom": "^9.18.3",
    "jsdom": "^22.0.0",
    "prettier": "^2.8.8",
    "vitest": "^0.31.0"
  }
}
