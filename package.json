{
  "name": "mitools",
  "version": "0.0.4",
  "description": "一些常用的工具类",
  "homepage": "https://github.com/dctmz/mitools",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:dctmz/mitools.git"
  },
  "files": [
    "src",
    "lib",
    "typings"
  ],
  "typings": "lib/index.d.ts",
  "scripts": {
    "dev": "rollup -w --environment NODE_ENV:development -c scripts/rollup.config.dev.js",
    "build": "rollup --environment NODE_ENV:development -c scripts/rollup.config.prod.js",
    "x": "npm --no-git-tag-version version major",
    "y": "npm --no-git-tag-version version minor",
    "z": "npm --no-git-tag-version version patch",
    "fix": "npm run lint --fix",
    "commit": "git-cz",
    "test": "jest",
    "test:c": "jest --coverage",
    "prepublish": "npm run build",
    "pub": "npm run build && npm publish --access=public",
    "pub:x": "npm run x && npm publish --access=public",
    "pub:y": "npm run y && npm publish --access=public",
    "pub:z": "npm run z && npm publish --access=public",
    "lint": "eslint src",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix && npm run lint:prettier",
    "lint:prettier": "prettier -c --write \"src/**/*\" --end-of-line auto",
    "lint-staged:js": "eslint --cache --ext .js,.jsx,.ts,.tsx ./src",
    "lint-staged": "lint-staged",
    "version:check": "exec < /dev/tty && node ./scripts/check-version.js",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "commit:verify": "commitlint -e $HUSKY_GIT_PARAMS"
  },
  "keywords": [],
  "author": "dctmz",
  "license": "MIT",
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "npm run lint-staged:js",
    "**/*.{js,jsx,tsx,ts,less,md,json}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@commitlint/config-conventional": "^15.0.0",
    "@rollup/plugin-alias": "^3.1.8",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-eslint": "^8.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-replace": "^3.0.0",
    "@rollup/plugin-strip": "^2.1.0",
    "@rollup/plugin-typescript": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "commitlint": "^15.0.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.4",
    "inquirer": "^8.2.0",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.0",
    "rollup": "^2.60.2",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-dts": "^4.0.1",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-uglify": "^5.0.2",
    "typescript": "^4.5.2"
  }
}
