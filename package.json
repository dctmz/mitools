{
  "name": "mitools",
  "version": "0.0.10",
  "description": "一些常用的工具类",
  "homepage": "https://github.com/dctmz/mitools",
  "main": "./lib/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:dctmz/mitools.git"
  },
  "files": [
    "lib/*"
  ],
  "typings": "lib/index.d.ts",
  "scripts": {
    "build":"tsc --project tsconfig.json --declaration --declarationMap --outDir lib",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix && npm run lint:prettier",
    "lint:prettier": "prettier -c --write \"src/**/*\" --end-of-line auto",
    "lint-staged:js": "eslint --cache --ext .js,.jsx,.ts,.tsx ./src",
    "lint-staged": "lint-staged"
  },
  "keywords": [],
  "author": "dctmz",
  "license": "MIT",
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "npm run lint-staged:js",
    "**/*.{js,jsx,tsx,ts,less,md,json}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "typescript": "^5.0.4",
    "vitest": "^0.31.0"
  },
  "dependencies": {
    "@dctxf/tsconfig": "^1.0.1"
  }
}
